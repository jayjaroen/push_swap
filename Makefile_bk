NAME = push_swap

# SRCS = srcs/main.c srcs/push_swap.c srcs/ft_lst_algo.c srcs/ft_lst_utils.c \
# 	srcs/ft_check_argv_utils.c 

SRCS = srcs/ft_check_argv_utils.c

INCLUDE = include

HEADER = push_swap.h

OBJ = $(SRCS:.c=.o)

CC = cc

CFLAGS = -Wall -Wextra -Werror

.c.o:
	cc $(CFLAGS) -Iinclude -c $< -o $(<:.c=.o)

$(NAME): $(OBJ)
	$(MAKE) -C libft
# $(CC) $(CFLAGS) -I$(INCLUDE) ./libft/libft.a $(OBJ) -o $(NAME)
	$(CC) $(CFLAGS) -Iinclude -Llibft -lft $(OBJ) -o $(NAME)

all: $(NAME)

clean:
	rm -f $(OBJ)

fclean: clean
	$(MAKE) fclean -C libft
	rm -f ./libft/libft.a
	rm -f push_swap

re : fclean all

.PHONY: all clean fclean re
